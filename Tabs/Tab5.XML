	<TabItem x:Name="UnifiedGroupsTab" Header="Unified Groups (O365 Groups)" Margin="0">
                <Grid>
                    <TextBox x:Name="UGName_TextBox" HorizontalAlignment="Left" Height="23" Margin="144,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="159"/>
                    <TextBlock HorizontalAlignment="Left" Margin="27,11,0,0" TextWrapping="Wrap" Text="O365 Group Name:" VerticalAlignment="Top"/>
                    <Button x:Name="UGView_Button" Content="View Details" HorizontalAlignment="Left" Margin="308,11,0,0" VerticalAlignment="Top" Width="111" Height="22"/>                   
